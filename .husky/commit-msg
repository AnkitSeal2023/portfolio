npx --no -- commitlint --edit $1
status=$?

# If commitlint fails, print allowed types
if [ $status -ne 0 ]; then
  echo ""
  echo "Allowed commit types:"
  echo "  feat     – new feature"
  echo "  fix      – bug fix"
  echo "  docs     – documentation only changes"
  echo "  style    – code style changes (no logic)"
  echo "  refactor – code restructuring"
  echo "  perf     – performance improvement"
  echo "  test     – adding or fixing tests"
  echo "  build    – build system changes (webpack, vite, etc.)"
  echo "  ci       – CI configuration changes"
  echo "  chore    – maintenance tasks"
  echo "  revert   – revert a previous commit"
  echo ""
  echo "Format: <type>: <message>"
  echo "Example: feat: add login page"
fi

exit $status
